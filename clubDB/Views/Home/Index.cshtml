@model IEnumerable<clubDB.Models.club>

@{
    ViewBag.Title = "Index";
}

<section id="homePage">

    <div class="heading">
        Professional Rugby Team Database

    </div>
    <hr />

    <div id="topNav">

        @using (Html.BeginForm()) 
        {
            <p>
                Name: @Html.TextBox("SearchString")
                
                &nbsp;&nbsp;  Country: @Html.DropDownList("clubCountry", "All") &nbsp;
               
                <input class="btn btn-outline-primary" type="submit" value="Filter" />
                <button class="btn btn-outline-primary"> @Html.ActionLink("Add a new club", "Create")</button>
            </p>
        }

    </div>
    <hr />
    <table class="table frontPage">
       
        <tr id="tableHead">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Established)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CurrentCoach)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Logo)
            </th>
            <th>Are you a fan?</th>
            <th>Fans</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
            {
            <tr>
                <td class="centerContent">@Html.DisplayFor(m => item.Name)</td>
                <td class="centerContent">@Html.DisplayFor(m => item.Established)</td>
                <td class="centerContent">@Html.DisplayFor(m => item.Country)</td>
                <td class="centerContent">@Html.DisplayFor(m => item.CurrentCoach)</td>
                <td><img src="@Url.Content(item.Logo)" height="100" /> </td>
                <td class="centerButtons">
                    <button class="btn btn-outline-primary"> @Html.ActionLink("Cheer", "Cheer", new { id = item.id })</button>
                     </td>
                <td class="centerContent"> &#128483;@Html.DisplayFor(m => item.Cheer)</td>
                <td class="centerButtons">
                    <button class="btn btn-outline-primary"> @Html.ActionLink("Edit", "Edit", new { id = item.id })</button> |

                    <button class="btn btn-outline-primary"> @Html.ActionLink("Details", "Details", new { id = item.id })</button> |

                    <button class="btn btn-outline-primary"> @Html.ActionLink("Delete", "Delete", new { id = item.id })</button>
                </td>

            </tr>
        }

    </table>
</section>